.container{
height: 480px;
width: 100%;
padding-top: 0px;
padding-bottom: 0px;
}

.top{
height: 150px;
width: 100%;
display: flex;
justify-content: center;
padding-top: 4px;
background-color: whitesmoke;
}

.input{
padding-left:5px;
padding-bottom: 5px;
padding-top: 5px;
height: 15px;
width: 300px;
font-size: 15spx;
border-radius: 5px;
border-width: 1px;
border-color:turquoise;
}

.selection{
height: 200px;
width: 100%;
flex-wrap: wrap;
display: flex;
justify-content: center;
margin-top: 20px;
}

.item{
height: 80px;
width: 25%;
margin: 12px;
background-color:lightgoldenrodyellow;
border-radius: 20px;
flex-wrap: wrap;
